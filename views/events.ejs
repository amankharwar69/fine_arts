<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/events.css">
    <title>FINE ARTS GDC</title>
</head>
<style>
    h1 {
        text-align: center;
        color: #333;
    }

    table {
        width: 90%;
        border-collapse: collapse;
        margin-top: 20px 0;
        margin: auto;
    }

    th,
    td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
        color: rgb(0, 0, 0);
        background-color: white;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #ddd;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

    img {
        max-width: 100px;
        height: auto;
        display: block;
    }

    button {
        background-color: #f44336;
        color: white;
        border: none;
        padding: 8px 16px;
        cursor: pointer;
    }

    button:hover {
        background-color: #d32f2f;
    }

    form {
        display: inline-block;
    }
</style>

<body>
    <!--NAVIGATION PART-->
    <div class="navigation">
        <nav>
            <div class="logo">
                <img src="resources/logo finearts.png" alt="">
                <h1>KALABDHI</h1>
                </h1>
            </div>
            <div class="nav">
                <form action="/loginpage" method="post">
                    <button name="button" value="aboutus">ABOUT US</button>
                    <button name="button" value="gallery">GALLERY</button>
                    <button name="button" value="home">HOME</button>
                    <button name="button" value="login">LOGIN</button>
                </form>
            </div>
        </nav>
    </div>

    <div class="events" style="color: white;text-align: center; padding: 1em 0;">
        <h1 style="font-size:xx-large;color: burlywood;">UPCOMING EVENTS</h1>
        <div class="event_cards">
            <% event_data.forEach(event=> { %>
                <div class="event-card">
                    <div class="event-details">
                        <h2>
                            <%= event.event_name %>
                        </h2>
                        <p><strong>Place:</strong>
                            <%= event.event_place %>
                        </p>
                        <p><strong>Date:</strong>
                            <%= formatDate(event.event_date) %>
                        </p>

                    </div>
                </div>
                <% }); %>
        </div>
    </div>


    <input id="search"
        style="font-size: 16px; border: none; padding: 10px; border-radius: 8px;  margin: auto; width:fit-content;outline: none;"
        type="text" placeholder="enter register number" oninput="filterTable(this.value)">

    <h1 style="color: white;margin: 3em 0 .5em 0;">Student Participated Events</h1>
    <table id="events-table">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Participated In</th>
                <th>Event Prize</th>
                <th>Event Place</th>
                <th>Event Date</th>
                <th>Students</th>
                <!-- <th>Event Images</th> -->
                <!-- <th>Delete</th> -->
            </tr>
        </thead>
        <tbody>
            <% events.forEach(event=> { %>
                <tr>
                    <td>
                        <%= event.eventName %>
                    </td>
                    <td>
                        <%= event.participatedIn %>
                    </td>
                    <td>
                        <%= event.eventPrize %>
                    </td>
                    <td>
                        <%= event.eventPlace %>
                    </td>
                    <td>
                        <%= event.eventDate.toDateString() %>
                    </td>
                    <td>
                        <ul>
                            <% event.students.forEach(student=> { %>
                                <li data-regno="<%= student.regNo %>">
                                    <%= student.name %> (<%= student.regNo %>, <%= student.studentClass %>)
                                </li>
                                <% }) %>
                        </ul>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <script>
        function filterTable(searchValue) {
            const tableRows = document.getElementById("events-table").querySelectorAll("tbody tr");
            for (let i = 0; i < tableRows.length; i++) {
                const row = tableRows[i];
                const regNos = row.getElementsByTagName("li");
                let showRow = false;
                for (let j = 0; j < regNos.length; j++) {
                    const regNo = regNos[j].getAttribute("data-regno");
                    if (regNo.includes(searchValue)) {
                        showRow = true;
                        break;
                    }
                }
                row.style.display = showRow ? "" : "none";
            }
        }
    </script>




    </script>










    <script>
        function formatDate(dateString) {
            const date = new Date(dateString);
            const options = { weekday: 'short', month: 'short', day: 'numeric' };
            return date.toLocaleDateString('en-US', options);
        }




    </script>







</body>


</html>