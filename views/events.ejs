<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/events.css">
    <title>FINE ARTS GDC</title>
</head>
<style>
    .event-card {
        display: flex;
        flex-direction: column;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: fit-content;
    }

    .event-card img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .event-details {
        padding: 20px;
    }

    .event-details h2 {
        margin-top: 0;
        margin-bottom: 10px;
    }

    .event-details p {
        margin: 0;
        margin-bottom: 5px;
    }

    .event-details a {
        display: inline-block;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .event-details a:hover {
        background-color: #0056b3;
    }

    .event_cards {
        display: flex;
        gap: 1em;
        justify-content: center;
        margin-top: 2em;
    }
</style>

<body>
    <!--NAVIGATION PART-->
    <div class="navigation">
        <nav>
            <div class="logo">
                <img src="resources/logo finearts.png" alt="">
                <h1>KALABDHI</h1>
                </h1>
            </div>
            <div class="nav">
                <form action="/loginpage" method="post">
                    <button name="button" value="aboutus">ABOUT US</button>
                    <button name="button" value="gallery">GALLERY</button>
                    <button name="button" value="home">HOME</button>
                    <button name="button" value="login">LOGIN</button>
                </form>
            </div>
        </nav>
    </div>

    <div class="events" style="color: white;text-align: center; padding: 1em 0;">
       <h1 style="font-size:xx-large;color: burlywood;">UPCOMING EVENTS</h1> 
        <div class="event_cards">

            <% event_data.forEach(event=> { %>
                <div class="event-card">
                    <div class="event-details">
                        <h2>
                            <%= event.event_name %>
                        </h2>
                        <p><strong>Place:</strong>
                            <%= event.event_place %>
                        </p>
                        <p><strong>Date:</strong>
                            <%= formatDate(event.event_date) %>
                        </p>
                        <a href="<%= event.brochure %>" target="_blank">View Brochure</a>
                    </div>
                </div>
                <% }); %>

        </div>
    </div>




    <script>
        function formatDate(dateString) {
            const date = new Date(dateString);
            const options = { weekday: 'short', month: 'short', day: 'numeric' };
            return date.toLocaleDateString('en-US', options);
        }
    </script>
    

</body>

</html>