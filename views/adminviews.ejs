<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events</title>
</head>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: rgb(71, 67, 67);
        margin: 0;
        padding: 20px;
    }


    h1 {
        text-align: center;
        color: #fff9f9;
        font-size: 3em;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th,
    td {
        border: 5px solid #474747;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #000000;
        color: rgb(255, 255, 255);
    }

    tr:nth-child(even) {
        background-color: #d7d0d0;
        color: rgb(0, 0, 0);
        font-size:1.4em;
    }
    tr:nth-child(odd) {
        background-color:  #d7d0d0;
        color: rgb(0, 0, 0);
        font-size:1.4em;
    }

    tr:hover {
        background-color: #978e8e;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

    img {
        max-width: 100px;
        height: auto;
        display: block;
    }

    button {
        background-color: #f44336;
        color: white;
        border: none;
        padding: 10px 16px;
        cursor: pointer;
    }

    button:hover {
        background-color: #d32f2f;
    }

    form {
        display: inline-block;
    }
</style>


<body>
    

    <h1>Upcoming Events</h1>
    <table>
        <thead>
            <tr>
                <th>Event Brochure</th>
                <th>Event Date</th>
                <th>Event Place</th>
                <th>Event Name</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            

            <% upevents.forEach(event=> { %>
                <tr>
                    <td><a href="<%= event.event_brochure %>" target="_blank">
                            <%= event.event_brochure %>
                        </a></td>
                    <td>
                        <%= event.event_date.toDateString() %>
                    </td>
                    <td>
                        <%= event.event_place %>
                    </td>
                    <td>
                        <%= event.event_name %>
                    </td>
                    <td>
                        <%= event.createdAt.toDateString() %>
                    </td>
                    <td>
                        <%= event.updatedAt.toDateString() %>
                    </td>
                    <td>
                        <form action="/delete-event/<%= event._id %>" method="post">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    
    <h1>Student Participated Events</h1>
    
        <input id="search"
            style="font-size: 16px; border: 1px solid grey; padding: 10px; border-radius: 8px;  margin: auto; width:fit-content;outline: none;"
            type="text" placeholder="enter register number" oninput="filterTable(this.value)">
    <table id="events-table">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Participated In</th>
                <th>Event Prize</th>
                <th>Event Place</th>
                <th>Event Date</th>
                <th>Students</th>
                <th>Event Images</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% events.forEach(event=> { %>
                <tr>
                    <td>
                        <%= event.eventName %>
                    </td>
                    <td>
                        <%= event.participatedIn %>
                    </td>
                    <td>
                        <%= event.eventPrize %>
                    </td>
                    <td>
                        <%= event.eventPlace %>
                    </td>
                    <td>
                        <%= event.eventDate.toDateString() %>
                    </td>
                    <td>
                        <ul>
                            <% event.students.forEach(student=> { %>
                                <li data-regno="<%= student.regNo %>">
                                    <%= student.name %> (<%= student.regNo %>, <%= student.studentClass %>)
                                </li>
                                <% }) %>
                        </ul>
                    </td>
                    <td>
                        <ul>
                            <% event.eventImages.forEach(image=> { %>
                                <li><img src="<%= image %>" alt="Event Image"></li>
                                <% }) %>
                        </ul>
                    </td>
                    <td>
                        <form action="/delete-upevent/<%= event._id %>" method="post">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <script>
        function filterTable(searchValue) {
            const tableRows = document.getElementById("events-table").querySelectorAll("tbody tr");
            for (let i = 0; i < tableRows.length; i++) {
                const row = tableRows[i];
                const regNos = row.getElementsByTagName("li");
                let showRow = false;
                for (let j = 0; j < regNos.length; j++) {
                    const regNo = regNos[j].getAttribute("data-regno");
                    if (regNo.includes(searchValue)) {
                        showRow = true;
                        break;
                    }
                }
                row.style.display = showRow ? "" : "none";
            }
        }
    </script>






    <div class="container">
        <h1>Event Bill List</h1>
        <table id="bill-table">
            <thead>
                <tr>
                    <th>Event Name</th>
                    <th>Event Date</th>
                    <th>Bill Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Table content will be inserted here -->
            </tbody>
        </table>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const billTable = document.getElementById("bill-table");
            const storedData = JSON.parse(localStorage.getItem("bills")) || [];

            // Function to render the table
            function renderTable() {
                // Clear existing table content
                billTable.querySelector("tbody").innerHTML = "";

                // Populate table with stored data
                storedData.forEach((bill, index) => {
                    const row = document.createElement("tr");
                    row.innerHTML = `
                        <td>${bill.eventName}</td>
                        <td>${bill.eventDate}</td>
                        <td>${bill.billAmount}</td>
                        <td><button onclick="deleteBill(${index})">Delete</button></td>
                    `;
                    billTable.querySelector("tbody").appendChild(row);
                });
            }

            // Function to delete a bill
            window.deleteBill = (index) => {
                storedData.splice(index, 1);
                localStorage.setItem("bills", JSON.stringify(storedData));
                renderTable();
            };

            // Render the initial table
            renderTable();
        });
    </script>


</body>

</html>